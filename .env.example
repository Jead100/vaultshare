# =====================================
# Core Django Settings (Quick Start)
# =====================================

# For local dev only. In production, use a strong unique secret.
SECRET_KEY=insecure-dev-secret-key

# True for local development
DEBUG=True

# Comma-separated hosts
ALLOWED_HOSTS=127.0.0.1,localhost

# Expose Django admin at /admin
EXPOSE_ADMIN=True

# If you access the app via a custom URL (Render, localhost tunnels, etc.),
# add it here (comma-separated, include scheme).
# Example: CSRF_TRUSTED_ORIGINS=http://127.0.0.1:8000,http://localhost:8000
CSRF_TRUSTED_ORIGINS=

# Demo mode can enforce stricter limits and default expirations
DEMO_MODE=False

# Default file TTL in seconds (0 = no expiration).
# If DEMO_MODE=True, your code defaults to 24h unless overridden.
DEFAULT_FILE_TTL_SECONDS=0


# =====================================
# Database (Optional)
# =====================================

# Leave blank to use SQLite (default: db.sqlite3).
# Example:
# DATABASE_URL=postgresql://user:password@localhost:5432/vaultshare
DATABASE_URL=


# =====================================
# Upload Policy (Common)
# =====================================

# If True, bypass extension/MIME restrictions
ALLOW_ANY_FILE_TYPE=False

# Max upload size per file (bytes). Default in code: 25MB
MAX_UPLOAD_SIZE=26214400

# Per-user storage quota (bytes). Default in code: 500MB
MAX_USER_STORAGE_BYTES=524288000


# =====================================
# Upload Allowlist (Optional / Advanced)
# =====================================

# Comma-separated extensions (lowercase recommended)
# If unset, your settings.py uses a safe default list.
ALLOWED_UPLOAD_EXTENSIONS=

# Comma-separated MIME types
# If unset, your settings.py uses a safe default list.
ALLOWED_UPLOAD_MIME_TYPES=


# =====================================
# Storage: Local vs S3-Compatible (Optional)
# =====================================

# For local testing, keep False (stores uploads in /media).
USE_S3=False

# Required only if USE_S3=True
AWS_STORAGE_BUCKET_NAME=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_REGION_NAME=us-east-1

# Optional for S3-compatible providers like Cloudflare R2 / MinIO
AWS_S3_ENDPOINT_URL=

# Optional: if you use a CDN/custom domain in front of S3
AWS_S3_CUSTOM_DOMAIN=


# =====================================
# Frontend Build (Optional)
# =====================================

# Only needed on some Windows setups for django-tailwind to find npm
# Example:
# NPM_BIN_PATH="C:/Program Files/nodejs/npm.cmd"
NPM_BIN_PATH=
