# ===============
# Django settings
# ===============

# Required: set your own secret key
# Generate one with:
#   python -c "from django.core.management.utils import get_random_secret_key as g; print(g())"
SECRET_KEY=

# Debug mode
# True  = development
# False = production
DEBUG=

# Comma-separated list of allowed hosts
# Example: 127.0.0.1,localhost,yourdomain.com
ALLOWED_HOSTS=

# =================
# Database settings
# =================
# Leave unset to use SQLite locally.
# Uncomment and configure for Postgres/MySQL in production.
# Example:
# DATABASE_URL=postgresql://user:password@hostname:5432/dbname

# =====================================================
# S3 storage (optional, required if using S3 for media)
# =====================================================
# AWS_STORAGE_BUCKET_NAME=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_REGION_NAME=

# ==============
# Frontend build
# ==============
# On Windows dev, set NPM_BIN_PATH so django-tailwind can find npm.
# Example: 
# NPM_BIN_PATH="C:/Program Files/nodejs/npm.cmd"
# On production (Linux servers like Render), leave it unset.
